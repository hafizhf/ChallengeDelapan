<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="andlima.hafizhfy.challengedelapan">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".FilmApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_logo_rounded"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo_rounded"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChallengeDelapan"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".view.main.DetailActivity"
            android:exported="true"
            android:label="@string/title_activity_detail"
            android:theme="@style/Theme.ChallengeDelapan.NoActionBar" />
        <activity
            android:name=".view.main.HomeActivity"
            android:exported="true"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.ChallengeDelapan.NoActionBar" />
        <activity
            android:name=".view.start.RegisterActivity"
            android:exported="true"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.ChallengeDelapan.NoActionBar" />
        <activity
            android:name=".view.start.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ChallengeDelapan.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>